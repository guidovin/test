<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <listener-class>
            sslRel.config.ContextListener
        </listener-class>
    </listener>

    <servlet>
        <servlet-name>Parameters</servlet-name>
        <jsp-file>/parameters.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Parameters</servlet-name>
        <url-pattern>/parameters</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>ParametersController</servlet-name>
        <servlet-class>TestMockController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ParametersController</servlet-name>
        <url-pattern>/sendParameters</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReportController</servlet-name>
        <servlet-class>Orquestrador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportController</servlet-name>
        <url-pattern>/generateReport</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>

    <servlet>
        <servlet-name>configServlet</servlet-name>
        <servlet-class>ConfigServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>configServlet</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>configUi</servlet-name>
        <jsp-file>/configUi.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>configUi</servlet-name>
        <url-pattern>/config/ui</url-pattern>
    </servlet-mapping>


    <resource-ref>
        <description>postgreSQL Datasource</description>
        <res-ref-name>jdbc/postgres</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
</web-app>